    <script>
        jQuery(document).ready(function($) {
            var username, pass;
            $('#submitslogin').click(function() {
                username = $('#usernamelogin').val();
                pass = $('#passwordlogin').val();
                    
                $.post('/login', { username: username, pass: pass }, function(data) {
                    if (data === 'done') {
                        window.location.href = '/home';
                        window.alert('Login Sukses');
                    }
                    else if (data === 'fail'){
                        window.alert('Login Gagal : Username Salah');
                    } 
                    else if (data === 'fail2'){
                        window.alert('Login Gagal : Password Salah');
                    }
                });
            });
        });
    </script>


