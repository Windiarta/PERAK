<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- AOS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <title>INI LOGINPAGE</title>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="container nav-wrapper">
                <a href="#" class="logo">PERAK<span>FTUI</span></a>
                <div class="menu-wrapper">
                    <ul class="menu">
                        <li class="menu-item"><a href="#" class="menu-link active">Home</a></li>
                        <li class="menu-item"><a href="#" class="menu-link">Login</a></li>
                        <li class="menu-item"><a href="#" class="menu-link">Register</a></li>
                        <li class="menu-item"><a href="#" class="menu-link">About us</a></li>
                        <li class="menu-item"><a href="#" class="menu-link">Contact</a></li>
                    </ul>
                    <a href="#" class="btn-member">Start Renting</a>
                </div>
                <div class="menu-toggle bx bxs-grid-alt">
                </div>
            </div>
        </nav>

        <div class="Makara-Wrapper">
            <img SRC = "images/makara-ui-ft.png" width="20%">
            
        </div>
        


        <section class="home" id="home">
            <div class="container home-wrapper">
                <div class="content-left" data-aos="fade-right">
                    <h1 class="heading">FACILITY RENTING  MADE EASIER with PERAK<span>FTUI</span></h1>
                    <p class="subheading">
                        PERAK make room rents easier for many people to use it and improve the accessibility of the facilities that are available in the Faculty of Engineering.
                    </p>
                    <div class="form-panel">
                        <img src="assets/img/form.png" alt="">
                        <div class="title-form">
                            <p>Get the schedule</p>
                        </div>
                        <div class="form-location">
                            <i class='bx bxs-map loc'></i>
                            <div class="location">
                                <p>Location <i class='bx bx-chevron-down'></i></p>
                                <select>
                                    <option value="">Gedung S</option>
                                    <option value="">Gedung K</option>
                                    <option value="">MRPQ</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-date">
                            <i class='bx bxs-calendar-alt cal'></i>
                            <div class="date">
                                <p>Date <i class='bx bx-chevron-down'></i></p>
                                <input type="date">
                            </div>
                        </div>
                        <div class="btn-search">
                            <i class='bx bx-search'></i>
                        </div>
                    </div>
                    <p class="sugestion">Popular search : Laptek, Gedung S, Gedung K</p>
                </div>
                <div class="content-right" data-aos="fade-left">
                    <div class="img-wrapper">
                        <img src="assets/img/hero-tavel.png" alt="">
                    </div>

                </div>

            </div>
        </section>
    </header>

   

            <!-- START OF COMMENT -->
            <div class="loginbox" id="login">
                <div class="subheadertxt">
                    <b>Login</b>
                </div>
                <div class="basictxt">
                    Username:
                </div>
                <div>
                    <input type="text" class="inputbox" id="usernamelogin" placeholder="username">
                </div>
                <div class="basictxt">
                    Password:
                </div>
                <div>
                    <input type="password" class="inputbox" id="passwordlogin" placeholder="password">
                </div>
                <div>
                    <input type="button" class="button" id="submitslogin" value="Login">
                </div>
                <div class="subbasictxt">
                    Not Have Account?
                    <a href="/registration" class="link">Sign Up</a>
                </div>
            </div>
            <!-- END OF COMMENT -->

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        jQuery(document).ready(function($) {
            var username, pass;
            $('#submitslogin').click(function() {
                username = $('#usernamelogin').val();
                pass = $('#passwordlogin').val();
                    
                $.post('/login', { username: username, pass: pass }, function(data) {
                    if (data === 'done') {
                        window.location.href = '/home';
                        window.alert('Login Sukses');
                    }
                    else if (data === 'fail'){
                        window.alert('Login Gagal : Username Salah');
                    } 
                    else if (data === 'fail2'){
                        window.alert('Login Gagal : Password Salah');
                    }
                });
            });
        });
    </script>


    <!-- AOS -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000
        });
    </script>

    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="assets/js/main.js"></script>
</body>

</html>
