<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="css/Style.css">
    <link rel="icon" href="https://drive.google.com/uc?export=view&id=1hFohbsBiFn4ucCA98l67d75zvn9U_y-X">
    <title>Perak FTUI</title>
</head>
  <body>

    <header>
      <nav class="navbar">
          <div class="container nav-wrapper">
              <a href="home" class="logo">PERAK<span>FTUI</span></a>
              <div class="menu-wrapper">
                  <ul class="menu">
                      <li class="menu-item"><a href="home" class="menu-link">Home</a></li>
                      <li class="menu-item"><a href="login" class="menu-link active">Login</a></li>
                      <li class="menu-item"><a href="register" class="menu-link">Register</a></li>
                      <li class="menu-item"><a href="aboutus" class="menu-link">About us</a></li>
                  </ul>
              </div>
              <div class="menu-toggle bx bxs-grid-alt">
              </div>
          </div>
      </nav>

      <div class="text-center">

        <form style="max-width: 480px; margin: auto;">
          <h3 class="h1 mt-3 mb-4" style="font-family: Raleway; color: white;">Sign In</h3>
          <label for="username" class="sr-only"></label>
          <input type="text" id="usernamelogin" class="form-control" placeholder="Username" required autofocus>
          <label for="password" class="sr-only"></label>
          <input type="password" id="passwordlogin" class="form-control" placeholder="Password" required autofocus>

          <div class="login-btn">
            <input type="button" class="login btn btn-lg btn-secondary btn-block" id="submitslogin" value="Login">
          </div>
          
        </form>

      </div>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <script>
        jQuery(document).ready(function($) {
            var username, pass;
            $('#submitslogin').click(function() {
                username = $('#usernamelogin').val();
                pass = $('#passwordlogin').val();
                    
                $.post('/login', { username: username, password: pass }, function (data) {
                    console.log(data);
                    if (data === 'done') {
                        window.location.href = '/home';
                    }
                    else if (data === 'fail') {
                        window.alert('Login Gagal : Username Salah');
                    }
                    else if (data === 'fail1') {
                        window.alert('Login Gagal : Akun ditolak, silahkan hubungi admin');
                    }
                    else if (data === 'fail2') {
                        window.alert('Login Gagal : Password Salah');
                    } else {
                        window.alert("Something Wrong in Login.ejs");
                    }
                });
            });
        });
    </script>
  </body>
</html>